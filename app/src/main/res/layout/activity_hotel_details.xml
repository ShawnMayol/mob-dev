<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/card_background"
        android:padding="16dp">

        <!-- Hotel Name -->
        <TextView
            android:id="@+id/hotelName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Grand Plaza Hotel"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#333333"
            android:gravity="center"
            android:paddingBottom="8dp"/>

        <!-- Destination -->
        <TextView
            android:id="@+id/hotelDestination"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Location: Paris"
            android:textSize="14sp"
            android:textColor="#555555"/>

        <!-- Check-in and Check-out Dates -->
        <TextView
            android:id="@+id/checkInDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Check-in: 10/05/2025"
            android:textSize="14sp"
            android:textColor="#555555"/>

        <TextView
            android:id="@+id/checkOutDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Check-out: 15/05/2025"
            android:textSize="14sp"
            android:textColor="#555555"/>

        <!-- Number of Guests -->
        <TextView
            android:id="@+id/guestsCount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Guests: 2"
            android:textSize="14sp"
            android:textColor="#555555"/>

        <!-- Price per Night -->
        <TextView
            android:id="@+id/hotelPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="$120 per night"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#FFA000"
            android:paddingTop="8dp"/>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DDDDDD"
            android:layout_marginVertical="16dp"/>

        <!-- Room Type Dropdown -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Choose Room Type"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#333333"
            android:paddingBottom="8dp"/>

        <Spinner
            android:id="@+id/roomTypeSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_background"
            android:padding="10dp"/>

        <!-- Confirm Booking Button -->
        <Button
            android:id="@+id/confirmHotelBookingBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CONFIRM BOOKING"
            android:textSize="16sp"
            android:backgroundTint="#FFA000"
            android:textColor="#FFFFFF"
            android:layout_marginTop="16dp"
            android:padding="12dp"/>
    </LinearLayout>
</ScrollView>
