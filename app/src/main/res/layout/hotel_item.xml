<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/card_background"
    android:padding="16dp"
    android:orientation="vertical">

    <!-- Hotel Name -->
    <TextView
        android:id="@+id/hotelName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Grand Plaza Hotel"
        android:textStyle="bold"
        android:textSize="16sp"/>

    <!-- Destination -->
    <TextView
        android:id="@+id/hotelDestination"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location: Paris"
        android:textSize="14sp"
        android:textColor="#555555"/>

    <!-- Check-in and Check-out Dates -->
    <TextView
        android:id="@+id/hotelCheckIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Check-in: 10/05/2025"
        android:textSize="14sp"
        android:textColor="#555555"/>

    <TextView
        android:id="@+id/hotelCheckOut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Check-out: 15/05/2025"
        android:textSize="14sp"
        android:textColor="#555555"/>

    <!-- Price -->
    <TextView
        android:id="@+id/hotelPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$120 per night"
        android:textSize="16sp"
        android:textStyle="bold"/>
</LinearLayout>
