<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <solid android:color="#FFFFFF"/>  <!-- White Background -->

    <corners android:radius="16dp"/>  <!-- Rounded Corners -->

    <padding
        android:left="8dp"
        android:right="8dp"
        android:top="8dp"
        android:bottom="8dp"/>

    <stroke
        android:width="2dp"
        android:color="#DDDDDD"/>  <!-- Light Gray Border -->

    <shadowColor android:color="#55000000"/> <!-- Subtle Shadow Effect -->
</shape>
